# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kora_insurance
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Blockchain Configuration
PROVIDER_URL=your_blockchain_provider_url
PRIVATE_KEY=your_private_key
CONTRACT_ADDRESS=your_contract_address

# AI Service Configuration - Choose ONE of the following options:

# Option 1: Ollama (FREE - Local AI) - RECOMMENDED
AI_SERVICE=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
# To install Ollama: curl -fsSL https://ollama.ai/install.sh | sh
# Then run: ollama pull llama3.2

# Option 2: Anthropic Claude (PAID)
# AI_SERVICE=anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 3: Google Gemini AI (PAID)
# AI_SERVICE=google
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Option 4: Fallback to regex only (FREE but less accurate)
# AI_SERVICE=regex

# Server Configuration
PORT=3001
